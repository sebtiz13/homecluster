{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": [
        "Kubernetes Group"
      ],
      "matchDatasources": [
        "pypi",
        "github-releases"
      ],
      "matchDepNames": [
        "kubernetes",
        "kubernetes-validate",
        "k3s-io/k3s"
      ],
      "groupName": "kubernetes",
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true
    },
    {
      "description": [
        "Flux Group"
      ],
      "matchDepNames": [
        "fluxcd"
      ],
      "groupName": "flux",
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true
    }
  ]
}
