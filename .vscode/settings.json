{
  "ansible.python.interpreterPath": "python",
  "ansible.python.activationScript": "./ansible/.venv/bin/activate",
  "ansible.validation.lint.path": "./ansible/.venv/bin/ansible-lint",
  "files.associations": {
    "**/*.json5": "jsonc", // this fix issue due no json5 support
    "*.yaml.j2": "yaml",
    "*.conf.j2": "properties",
    "*.json.j2": "json",
    "*.xml.j2": "xml",
    "**/ansible/{site,salamandre,baku}.yaml": "ansible",
    "**/ansible/**/{handlers,tasks}/**/*.yaml": "ansible"
  },
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "kubernetes": "./kubernetes/**/*.yaml"
  }
}
